<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent"
    tools:context=".UpdateProfile">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:background="@drawable/red_border"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:backgroundTint="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Update Profile"
                android:textColor="@color/tit"
                android:textSize="25sp"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/baseline_co_present_24"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/red_border"
                    android:fontFamily="@font/aladin"
                    android:padding="15dp"
                    android:text="Name :"
                    android:textAlignment="center"
                    android:textColor="@color/tit"
                    android:textSize="16dp"
                    tools:ignore="TextSizeCheck" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:inputType="text"
                    android:id="@+id/update_name"
                    android:fontFamily="@font/aladin"
                    android:layout_marginEnd="5dp"
                    android:padding="15dp"
                    android:gravity="start"
                    android:textSize="16dp"
                    android:textColor="@color/tit"
                    android:background="@drawable/red_border"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="5dp"
                    android:textAlignment="center"
                    android:layout_height="match_parent"
                    android:textColor="@color/tit"
                    android:background="@drawable/red_border"
                    android:fontFamily="@font/aladin"
                    android:padding="15dp"
                    android:text="Email :"
                    android:textSize="16dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:text="Email"
                    android:id="@+id/update_email"
                    android:textColor="@color/tit"
                    android:fontFamily="@font/aladin"
                    android:layout_marginEnd="5dp"
                    android:padding="15dp"
                    android:gravity="start"
                    android:textSize="16dp"
                    android:background="@drawable/red_border"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="5dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:text="Phone no :"
                    android:textColor="@color/tit"
                    android:textSize="16dp"
                    android:fontFamily="@font/aladin"
                    android:background="@drawable/red_border"
                    android:padding="15dp" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone number"
                    android:textColor="@color/tit"
                    android:fontFamily="@font/aladin"
                    android:inputType="number"
                    android:id="@+id/update_phone"
                    android:layout_marginEnd="5dp"
                    android:padding="15dp"
                    android:gravity="start"
                    android:textSize="16dp"
                    android:background="@drawable/red_border"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/red_border"
                    android:fontFamily="@font/aladin"
                    android:padding="15dp"
                    android:text="Enrollment :"
                    android:textAlignment="center"
                    android:textColor="@color/tit"
                    android:textSize="16dp"
                    tools:ignore="TextSizeCheck" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enrollment"
                    android:inputType="text"
                    android:fontFamily="@font/aladin"
                    android:layout_marginEnd="5dp"
                    android:padding="15dp"
                    android:textColor="@color/tit"
                    android:gravity="start"
                    android:id="@+id/update_enrollment"
                    android:textSize="16dp"
                    android:background="@drawable/red_border"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/red_border"
                    android:fontFamily="@font/aladin"
                    android:padding="15dp"
                    android:text="Sport :"
                    android:textAlignment="center"
                    android:textColor="@color/tit"
                    android:textSize="16dp"
                    tools:ignore="TextSizeCheck" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sport"
                    android:inputType="text"
                    android:fontFamily="@font/aladin"
                    android:layout_marginEnd="5dp"
                    android:padding="15dp"
                    android:textColor="@color/tit"
                    android:gravity="start"
                    android:id="@+id/update_sport"
                    android:textSize="16dp"
                    android:background="@drawable/red_border"/>
            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/red_border"
                android:text="Save"
                android:textSize="25sp"
                android:id="@+id/update_update"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>